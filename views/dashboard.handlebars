<section>
    <h2> Create a Post</h2>

    <form class="new-post-form"
    <div>
        <label for="post-title">Title of Post</label>
        <input type="text" name="post-title", id="post-title"/>
    </div>
    <div>
        <label for="post-text">Text your post</label>
        <textarea name="post-text" id="post-text" rows="10" cols="50"></textarea>
    </div>
    <button type="submit" class="btn btn-success">Add Post</button>
    </form>
</section>
{{#if posts.length}}

<section>
    <h2>Your Posts</h2>
    <ol>
        {{#each posts as |post|}}
        <li>
            {{>post-info post}}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit Post</a>
        </li>
        {{/each}}
    </ol>

</section>
{{/if}}

<script src="/js/addPost.js"></script>